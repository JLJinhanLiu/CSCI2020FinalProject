            <image>
               <Image url="@Textures/asteroids3.png" />
            </image>
         </ImageView>
         <ImageView fx:id="asteroid2" fitHeight="150.0" fitWidth="200.0" layoutX="735.0" layoutY="-2.0" pickOnBounds="true" preserveRatio="true">
